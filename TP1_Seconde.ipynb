    "from math import *\n",
    "\n",
    "# Programme du théorème de Thalès (a/b = c/d)\n",
    "def ThThales(a,b,d):\n",
    "    return (a*d)/b\n",
    "\n",
    "#Partie nécessaire à l'exécution du programme\n",
    "print(ThThales(1.5,3,5))"
